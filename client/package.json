        "classnames": "^2.5.1",
        "dotenv": "^16.4.5",
        "fp-ts": "^2.16.5",
        "io-ts": "^2.2.21",
        "lodash": "^4.17.21",
        "lucide-react": "^0.376.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-select": "^5.8.0",
        "simple-sync": "github:mwilliamson/simple-sync#9cd44256e764d09d194b48b6e32f13ac9706f8d6",
