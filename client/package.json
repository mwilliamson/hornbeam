        "esbuild": "^0.20.2",
        "esbuild-sass-plugin": "^3.2.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "express": "^4.19.2",
        "mocha": "^10.7.3",
        "react-cosmos": "^6.1.1",
        "react-cosmos-dom": "^6.1.1",
        "tsc-watch": "^6.2.0",
        "typescript": "^5.4.3"
