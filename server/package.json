    "fastify": "^4.28.1",
    "kysely": "^0.27.4",
    "p-map-series": "^2.1.0",
    "pg": "^8.12.0"
  },
  "volta": {
    "node": "20.12.0",
    "npm": "10.5.0"
  },
  "devDependencies": {
    "@mwilliamson/precisely": "^1.2.0",
    "@types/async": "^3.2.24",
    "@types/node": "^22.2.0",
    "@types/pg": "^8.11.8",
    "kysely-codegen": "^0.16.3",
    "typescript": "^5.5.4"
